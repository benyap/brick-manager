{
  "name": "brick-manager",
  "version": "0.0.0",
  "description": "Manage your LEGO inventory",
  "main": "./build/main.bundle.js",
  "author": "Ben Yap <contact@benyap.com>",
  "license": "MIT",
  "homepage": "https://github.com/benyap/brick-manager#README.md",
  "repository": "https://github.com/benyap/brick-manager",
  "bugs": "https://github.com/benyap/brick-manager/issues",
  "scripts": {
    "format": "prettier 'src/**/*.ts' --write",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register 'test/**/*.ts'",
    "start": "electron ./build/main.bundle.js",
    "dev": "rm -rf build/** && yarn concurrently --kill-others -n w: 'yarn:dev:*'",
    "dev:build:app": "cross-env NODE_ENV=development yarn build:app --watch",
    "dev:build:css": "yarn build:css --watch",
    "dev:serve": "wait-on build/index.html && cross-env NODE_ENV=development yarn start",
    "build": "rm -rf build/** && yarn build:css && cross-env NODE_ENV=production yarn build:app --progress",
    "build:app": "webpack --color",
    "build:css": "tailwindcss -i src/renderer/styles.css -o build/styles.css",
    "make": "rm -rf dist/** && yarn make:mac && yarn make:win",
    "make:mac": "electron-builder build --mac --x64",
    "make:win": "electron-builder build --win --x64",
    "release": "yarn format && yarn lint && yarn build && yarn make && env-cmd release-it"
  },
  "build": {
    "appId": "com.benyap.brick-manager",
    "productName": "Brick Manager",
    "directories": {
      "app": "./build/",
      "output": "./dist/"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "asar": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "buildVersion": "1"
  },
  "dependencies": {
    "electron-context-menu": "3.1.1",
    "electron-store": "8.0.1",
    "electron-util": "0.17.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router": "6.2.1",
    "react-router-dom": "6.2.1"
  },
  "devDependencies": {
    "@release-it/bumper": "3.0.1",
    "@release-it/conventional-changelog": "3.3.0",
    "@tailwindcss/forms": "0.4.0",
    "@types/mocha": "9.0.0",
    "@types/node": "17.0.8",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "@types/react-router": "5.1.17",
    "@types/react-router-dom": "5.3.2",
    "@typescript-eslint/eslint-plugin": "5.9.0",
    "@typescript-eslint/parser": "5.9.0",
    "autoprefixer": "10.4.2",
    "concurrently": "7.0.0",
    "copy-webpack-plugin": "10.2.0",
    "cross-env": "7.0.3",
    "css-loader": "6.5.1",
    "electron": "16.0.6",
    "electron-builder": "22.14.5",
    "env-cmd": "10.1.0",
    "eslint": "8.6.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-webpack": "0.13.2",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "lodash": "4.17.21",
    "mocha": "9.1.3",
    "postcss": "8.4.5",
    "prettier": "2.5.1",
    "release-it": "14.11.8",
    "source-map-loader": "3.0.1",
    "spectron": "15.0.0",
    "style-loader": "3.3.1",
    "tailwindcss": "3.0.12",
    "ts-loader": "9.2.6",
    "ts-node": "10.4.0",
    "tsconfig-paths": "3.12.0",
    "typescript": "4.5.4",
    "wait-on": "6.0.0",
    "webpack": "5.65.0",
    "webpack-cli": "4.9.1"
  }
}
