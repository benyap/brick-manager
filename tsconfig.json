{
  "compilerOptions": {
    "outDir": "build",
    "jsx": "react-jsx",
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/renderer/*"]
    }
  },
  "exclude": ["node_modules"]
}
